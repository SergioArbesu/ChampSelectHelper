<Window x:Class="ChampSelectHelperApp.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChampSelectHelperApp"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d"
        Title="Loading..." Height="300" Width="300" SizeToContent="Height"
        Icon="Resources/System Icons/icon.ico" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Closing="LoadingWindow_Closing" ShowInTaskbar="False">
    <Grid>
        <Image gif:AnimationBehavior.SourceUri="/Resources/loading.gif" Stretch="Uniform"/>

    </Grid>
</Window>
